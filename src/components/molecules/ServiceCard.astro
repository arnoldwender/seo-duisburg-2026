---
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  description: string;
  icon: string;
  features: string[];
  class?: string;
}

const { title, description, icon, features, class: className } = Astro.props;
---

<article class:list={[
  "hover-card bg-white dark:bg-gray-800 rounded-xl p-8 shadow-sm reveal",
  className
]}>
  <figure class="w-12 h-12 bg-primary-100 dark:bg-primary-900/50 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary-600 transition-colors duration-300 icon-hover" aria-hidden="true">
    <Icon name={icon} class="w-6 h-6 text-primary-600 dark:text-primary-400 group-hover:text-white transition-colors duration-300" />
  </figure>
  
  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">{title}</h3>
  <p class="text-gray-600 dark:text-gray-300 mb-6">{description}</p>
  
  <ul class="space-y-3" role="list" aria-label={`Funktionen fÃ¼r ${title}`}>
    {features.map((feature) => (
      <li class="flex items-center text-sm text-gray-600 dark:text-gray-300">
        <Icon name="heroicons:check" class="w-5 h-5 text-primary-600 dark:text-primary-400 mr-2 icon-hover" aria-hidden="true" />
        {feature}
      </li>
    ))}
  </ul>
</article>