    { name: 'Sitemap', href: '/sitemap/' },
  ],
  legal: [
    { name: 'Impressum', href: '/impressum/' },
  { name: 'Datenschutz', href: '/datenschutz/' },
  { name: 'Cookies', href: '/cookies/' },
  { name: 'AGB', href: '/agb/' },
    { name: 'AV-Vertrag', href: '/av-vertrag/' },
  ],
  social: [
    { name: 'Facebook', href: 'https://www.facebook.com/seoduisburg', icon: 'simple-icons:facebook' },
    { name: 'Twitter', href: 'https://twitter.com/seoduisburg', icon: 'simple-icons:twitter' },
    { name: 'LinkedIn', href: 'https://www.linkedin.com/company/seo-duisburg', icon: 'simple-icons:linkedin' },
