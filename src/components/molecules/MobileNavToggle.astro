---
import { Icon } from 'astro-icon/components';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<button
  type="button"
  id="mobile-menu-button"
  aria-controls="mobile-menu"
  aria-expanded="false"
  class:list={[
    "inline-flex items-center justify-center rounded-lg p-2.5 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-primary-700 dark:focus:ring-primary-400",
    className
  ]}
>
  <span class="sr-only">Menü öffnen</span>
  <Icon name="heroicons:bars-3" class="h-6 w-6" />
</button>