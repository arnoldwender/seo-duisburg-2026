---
const { items = [], class: className = "" } = Astro.props as {
  items: Array<{ name: string; href: string }>
  class?: string
};

const site = Astro.site ?? new URL("/", "https://seo-halle.de");

// Build JSON-LD BreadcrumbList
const itemListElement = items.map((item, index) => ({
  '@type': 'ListItem',
  position: index + 1,
  name: item.name,
  item: new URL(item.href, site).toString(),
}));
---

<nav aria-label="Breadcrumb" class={`mb-6 text-sm ${className}`}>
  <ol class="flex flex-wrap items-center gap-1 text-gray-600 dark:text-gray-300">
    {items.map((item, idx) => {
      const isLast = idx === items.length - 1;
      return (
        <li class="flex items-center">
          {isLast ? (
            <span aria-current="page" class="font-medium text-gray-900 dark:text-white">
              {item.name}
            </span>
          ) : (
            <a href={item.href} class="hover:text-primary-600 dark:hover:text-primary-400">
              {item.name}
            </a>
          )}
          {!isLast && (
            <span class="mx-2 text-gray-400">/</span>
          )}
        </li>
      );
    })}
  </ol>
  <script type="application/ld+json" is:inline>
    {JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement,
    })}
  </script>
</nav>
