---
import { Icon } from 'astro-icon/components';

const testimonials = [
  {
    content: "Herr Wender ist ein kompetenter und freundlicher SEO Experte. Von der Erstellung unserer Praxis Homepage bis zur Website Optimierung bin ich rundum zufrieden.",
    author: "Dr. med. Carsten Becker",
    role: "Orthopäde Dessau",
    rating: 5
  },
  {
    content: "Arnold Wender ist ein sympathischer und fachkundiger Geschäftsmann, der Online-Marketing & Webdesign Aufträge zuverlässig bearbeitet.",
    author: "Christiane Saalfeld",
    role: "Hundeschule Saalfeld",
    rating: 5
  },
  {
    content: "Vielen Dank für die super Homepage Gestaltung, der erfolgreiche Suchmaschinenoptimierung Service, sowie die professionelle Zusammenarbeit.",
    author: "Nancy Zaruba",
    role: "Das Bewegte Haus",
    rating: 5
  }
];

const stats: Array<{ value: string; label: string }> = [];
---

<section id="referenzen" class="relative py-24 bg-primary-900 dark:bg-gray-900" aria-labelledby="testimonials-title">
  <div class="absolute inset-0 bg-gradient-to-br from-primary-900 to-primary-800 opacity-50"></div>
  <div class="container">
    <header class="text-center max-w-3xl mx-auto mb-16 reveal">
      <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-white/10 text-white mb-4">
        Referenzen
      </div>
      <h2 id="testimonials-title" class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        Das sagen unsere Kunden
      </h2>
      <p class="mt-6 text-lg leading-8 text-gray-100">
        Erfahren Sie, wie wir anderen Unternehmen zu mehr Online-Erfolg verholfen haben.
      </p>
    </header>

    {stats.length > 0 && (
      <div class="grid grid-cols-2 md:grid-cols-3 gap-6 mb-16 reveal">
        {stats.map(stat => (
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-center hover:bg-white/20 transition-all duration-300 border border-white/10">
            <p class="text-3xl font-bold text-white">{stat.value}</p>
            <p class="text-sm text-gray-200">{stat.label}</p>
          </div>
        ))}
      </div>
    )}

    <!-- Testimonials -->
    <div class="grid md:grid-cols-3 gap-8 reveal" role="list">
      {
        testimonials.map(({ content, author, role, rating }) => (
          <figure class="relative bg-white/10 backdrop-blur-sm rounded-xl p-8 border border-white/10 hover:bg-white/20 card-hover" role="listitem">
            <div class="absolute top-4 right-4">
              <div class="flex items-center">
                {Array.from({ length: rating }).map(() => (
                  <Icon name="heroicons:star-solid" class="w-5 h-5 text-accent-400 icon-bounce" />
                ))}
              </div>
            </div>
            <Icon name="heroicons:chat-bubble-bottom-center-text" class="w-8 h-8 text-white/20 mb-4 icon-spin" />
            <blockquote class="flex-1">
              <p class="text-gray-100 mb-6">"{content}"</p>
            </blockquote>
            <figcaption class="mt-6 flex items-center gap-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 rounded-full bg-white/10 flex items-center justify-center">
                  <span class="text-xl font-semibold text-white">
                    {author.charAt(0)}
                  </span>
                </div>
              </div>
              <div>
              <p class="font-semibold text-white">{author}</p>
              <p class="text-gray-200 text-sm">{role}</p>
              </div>
            </figcaption>
          </figure>
        ))
      }
    </div>

    <footer class="mt-16 text-center reveal">
      <a href="#kontakt" class="btn bg-white text-primary-900 hover:bg-white/90">
        Jetzt kostenlose Beratung sichern
        <Icon name="heroicons:arrow-right" class="w-5 h-5 ml-2" />
      </a>
    </footer>
  </div>