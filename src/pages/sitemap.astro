---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/organisms/Footer.astro';
import Breadcrumbs from '../components/molecules/Breadcrumbs.astro';
import { Icon } from 'astro-icon/components';

const title = "Sitemap - SEO Halle";
const description = "Übersicht aller Seiten der SEO-Agentur Halle Website.";
const keywords = [
  'Sitemap',
  'Seitenübersicht',
  'SEO Halle Sitemap'
];

const pages = [
  {
    title: 'Startseite',
    url: '/',
    description: 'SEO Agentur in Halle (Saale) - Professionelle Suchmaschinenoptimierung'
  },
  {
    title: 'Kontakt',
    url: '/kontakt/',
    description: 'Kontaktieren Sie uns für Ihre individuelle SEO-Beratung'
  },
  {
    title: 'Kostenvoranschlag',
    url: '/kostenvoranschlag/',
    description: 'Fordern Sie einen individuellen SEO-Kostenvoranschlag an'
  },
  {
    title: 'Öffnungszeiten',
    url: '/oeffnungszeiten/',
    description: 'Unsere Öffnungszeiten und Erreichbarkeit'
  },
  {
    title: 'Standort',
    url: '/standort/',
    description: 'Unser Standort in Halle (Saale)'
  },
  {
    title: 'Impressum',
    url: '/impressum/',
    description: 'Rechtliche Informationen und Angaben'
  },
  {
    title: 'Datenschutz',
    url: '/datenschutz/',
    description: 'Datenschutzerklärung und Informationen zum Umgang mit Ihren Daten'
  },
  {
    title: 'AGB',
    url: '/agb/',
    description: 'Allgemeine Geschäftsbedingungen'
  },
  {
    title: 'AV-Vertrag',
    url: '/av-vertrag/',
    description: 'Auftragsverarbeitungsvertrag gemäß Art. 28 DSGVO'
  }
];
---

<Layout title={title} description={description} keywords={keywords}>
  
  <main class="pt-32 sm:pt-36 lg:pt-40 pb-16">
    <div class="container">
      <Breadcrumbs items={[
        { name: 'Startseite', href: '/' },
        { name: 'Sitemap', href: '/sitemap/' },
      ]} />
      <header class="text-center max-w-3xl mx-auto mb-16">
        <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-primary-100 text-primary-700 dark:bg-primary-900/50 dark:text-primary-300 mb-4">
          Sitemap
        </div>
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl mb-6">
          Sitemap
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Hier finden Sie eine Übersicht aller verfügbaren Seiten.
        </p>
      </header>

      <div class="max-w-4xl mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-8 shadow-sm">
          <ul class="space-y-6">
            {pages.map(page => (
              <li class="group">
                <a href={page.url} class="block p-4 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                  <div class="flex items-center gap-2">
                    <Icon name="heroicons:arrow-right" class="w-5 h-5 text-primary-600 dark:text-primary-400 transition-transform group-hover:translate-x-1" />
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">{page.title}</h2>
                  </div>
                  <p class="mt-1 text-gray-600 dark:text-gray-300 pl-7">{page.description}</p>
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>