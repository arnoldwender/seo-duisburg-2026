  { name: 'Referenzen', href: '/#referenzen' },
  { name: 'Kontakt', href: '/kontakt/' },
];
---

<nav class:list={["flex items-center gap-4 lg:gap-8", className]}>
  {
    navigation.map(({ name, href }) => (
      <a
        role="menuitem"
        href={href}
        aria-current={Astro.url.pathname === href ? "page" : undefined}
        class="group flex items-center gap-1 py-2 relative text-sm lg:text-base text-gray-600 dark:text-gray-300 hover:text-accent-500 dark:hover:text-accent-400 transition-colors duration-200 after:absolute after:bottom-0 after:left-0 after:w-full after:h-0.5 after:bg-accent-500 after:transform after:scale-x-0 after:origin-left after:transition-transform after:duration-300 hover:after:scale-x-100"
      >
        <span>
          {name}
        </span>
      </a>
    ))
  }
  <a 
    href="/kostenvoranschlag/" 
    class="btn btn-primary group relative overflow-hidden hover:bg-accent-600 transition-all duration-300 text-sm lg:text-base whitespace-nowrap hover:-translate-y-0.5"
  >
    Erstberatung sichern
    <span class="absolute inset-0 w-full h-full bg-white/20 transform -translate-x-full transition-transform duration-300 group-hover:translate-x-0"></span>
  </a>
</nav>