---
import { Icon } from 'astro-icon/components';

const services = [
  {
    title: 'SEO Strategie & Analyse',
    description: 'Umfassende SEO-Audits und maßgeschneiderte Strategien basierend auf KI-gestützter Datenanalyse und Wettbewerbsforschung.',
    icon: 'heroicons:chart-bar',
    features: ['KI-gestützte Analysen', 'Wettbewerbsanalyse', 'Keyword-Recherche', 'Performance Tracking']
  },
  {
    title: 'Content Excellence',
    description: 'Hochwertige, SEO-optimierte Inhalte, die Ihre Expertise unterstreichen und Conversions steigern.',
    icon: 'heroicons:document-text',
    features: ['Content Strategie', 'SEO Copywriting', 'Content Marketing', 'Conversion Optimierung']
  },
  {
    title: 'Technisches SEO',
    description: 'Optimale technische Performance Ihrer Website durch modernste SEO-Technologien und Best Practices.',
    icon: 'heroicons:code-bracket',
    features: ['Core Web Vitals', 'Mobile Optimierung', 'Schema Markup', 'Technische Audits']
  },
  {
    title: 'Local SEO & GMB',
    description: 'Verbessern Sie Ihre lokale Sichtbarkeit mit unserer spezialisierten Local-SEO-Expertise.',
    icon: 'heroicons:map-pin',
    features: ['Google My Business', 'Local Citations', 'Bewertungsmanagement', 'Local Link Building']
  },
];
---

<section id="leistungen" class="py-24 bg-gray-50 dark:bg-gray-900" aria-labelledby="services-title">
  <div class="container">
    <header class="text-center max-w-3xl mx-auto mb-16 reveal">
      <div class="inline-flex items-center rounded-full px-4 py-1 text-sm font-medium bg-primary-100 text-primary-700 dark:bg-primary-900/50 dark:text-primary-300">
        Unsere Expertise
      </div>
      <h2 id="services-title" class="mt-6 text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        Premium SEO-Leistungen für Ihren Erfolg
      </h2>
      <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-300">
        Steigern Sie Ihre Online-Präsenz mit unseren datengetriebenen SEO-Strategien und modernsten Technologien.
      </p>
    </header>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service, index) => (
        <article 
          class="bg-white dark:bg-gray-800 rounded-xl p-8 shadow-sm card-hover reveal"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/50 rounded-lg flex items-center justify-center mb-6 icon-bounce">
            <Icon name={service.icon} class="w-6 h-6 text-primary-600 dark:text-primary-400" />
          </div>
          
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">{service.title}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-6">{service.description}</p>
          
          <ul class="space-y-3">
            {service.features.map((feature) => (
              <li class="flex items-center text-sm text-gray-600 dark:text-gray-300 hover-scale">
                <Icon name="heroicons:check" class="w-5 h-5 text-primary-600 dark:text-primary-400 mr-2" />
                {feature}
              </li>
            ))}
          </ul>
        </article>
      ))}
    </div>

    <footer class="mt-16 text-center reveal">
      <a 
        href="#kontakt"
        class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 transition-colors duration-200 hover-glow"
      >
        Jetzt SEO-Beratung vereinbaren
      </a>
    </footer>
  </div>
</section>

<script>
  // Intersection Observer for reveal animations
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('opacity-100', 'translate-y-0');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Observe all elements with reveal class
  document.querySelectorAll('.reveal').forEach((element) => {
    observer.observe(element);
  });
</script>