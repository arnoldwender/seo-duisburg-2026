---
interface Props {
  title?: string;
  description?: string;
  class?: string;
}

const { title, description, class: className } = Astro.props;
---

<div class:list={[
  "bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-300",
  className
]}>
  {title && <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{title}</h3>}
  {description && <p class="text-gray-600 dark:text-gray-300">{description}</p>}
  <slot />
</div>