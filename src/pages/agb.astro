<script>
  const content = document.getElementById('legal-content-agb');
  const list = document.getElementById('toc-list-agb');
  const toc = document.getElementById('toc-container-agb');
  function slugify(input: string) {
    let s = (input || '').toString().trim().toLowerCase();
    try { s = s.normalize('NFKD').replace(/[\u0300-\u036f]/g, ''); } catch {}
    s = s.replace(/ä/g, 'ae').replace(/ö/g, 'oe').replace(/ü/g, 'ue').replace(/ß/g, 'ss')
         .replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
    return s || 'abschnitt';
  }
  if (content && list) {
    const headings = content.querySelectorAll('h2');
    let threshold = 3;
    if (toc) {
      const attr = toc.getAttribute('data-toc-threshold') || '';
      const parsed = parseInt(attr, 10);
      if (!Number.isNaN(parsed) && parsed > 0) threshold = parsed;
    }
    if (headings.length < threshold) {
      if (toc) toc.style.display = 'none';
    } else {
      headings.forEach((h, idx) => {
      const text = (h.textContent || '').trim() || `Abschnitt ${idx + 1}`;
      let id = h.id || slugify(text); let unique = id; let i = 2;
      while (document.getElementById(unique)) unique = `${id}-${i++}`;
      h.id = unique;
      const li = document.createElement('li');
      const a = document.createElement('a');
      a.href = `#${unique}`; a.textContent = text;
      a.className = 'hover:text-primary-600 dark:hover:text-primary-400';
      li.appendChild(a); list.appendChild(li);
      const small = document.createElement('a');
      small.href = '#main'; small.textContent = '↑ Top';
      small.className = 'ml-2 align-middle text-xs text-gray-400 hover:text-primary-500 dark:text-gray-500 dark:hover:text-primary-400';
      h.appendChild(small);
      });
    }
  }
</script>
